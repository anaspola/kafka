GroupName: {{Selectedgroup}}
<br/>
<br/> 

<div class="articles-container">
<div class="datagrid">
<table>
<thead>
<tr>
<th>Topic Name</th>
<th>Partition Pid</th>
<th>Lag</th>
<th>Offset</th>
</tr>
</thead>
<tbody>
{{#each Topic in model}}
<tr class="alt">
<td>
{{ Topic.name }}
</td>
<td>
	<ul class="kwc-table-rows">
		{{#each partition in Topic.partitions}}
			<li>
				{{ partition.pid }}				
			</li>
		{{/each}}
	</ul>
</td>
<td>
	<ul class="kwc-table-rows">
		{{#each partition in Topic.partitions}}
			<li>
				{{ partition.lag }}
			</li>			
		{{/each}}
	</ul>
	
</td>
<td>
	<ul class="kwc-table-rows">
		{{#each partition in Topic.partitions}}
			<li>
				{{ partition.offset }}
			</li>			
		{{/each}}
	</ul>
</td>
</tr>
{{/each}}
</tbody>
</table>
</div>
</div>

